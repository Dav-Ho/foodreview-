<div class="form-group row">
  <div class="col-xs-4">
    <%= form_for @restaurant do |f| %>

      <%= f.label :name, class: "form-control-label" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description, class: "form-control-label" %>
      <%= f.text_area :description, class: "form-control" %><br />

      <%=  f.label :category, class: "form-control-label" %>
      <%= f.select :category_id, Category.all.map{ |f| [f.name, f.id] } %><br /><br />

      <%= f.label :address, class: "form-control-label" %>
      <%= f.text_field :address, class: "form-control" %>

      <%= f.label :city, class: "form-control-label" %>
      <%= f.text_field :city, class: "form-control" %>

      <%= f.label :state, class: "form-control-label" %>
      <%= f.text_field :state, class: "form-control" %>

      <%= f.label :zipcode, class: "form-control-label" %>
      <%= f.text_field :zipcode, class: "form-control" %>

      <%= f.label :phone, class: "form-control-label" %>
      <%= f.text_field :phone, class: "form-control" %>

      <%= f.label :email, class: "form-control-label" %>
      <%= f.text_field :email, class: "form-control" %>

      <%= f.submit "Create Restaurant", class: "btn btn-default" %>
    <% end %>
  </div>
</div>
